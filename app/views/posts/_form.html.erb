<br>
<%= form_for(@post) do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "input" %>
    <% @post.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
      <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body, class: "input"  %>
  </div>

  <div>
    <%= form.submit class: "btn-submit" %>
  </div>

<% end %>
