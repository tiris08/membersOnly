

    <h2>#trends</h2>
    <% @posts.each do |post| %>
    <div class="flex-conteiner">
      <div class="flex-main">
       <%= link_to "#{post.title}", post_path(post),  class: "btn_control" %>
      </div>
      <div class="flex-side">
      <% if user_signed_in? %>
        <h2><%= "written by '#{post.user.name}'" %></h2>
      <% else %>
        <h2>Anonymous author</h2>
      <% end %>
      </div>  
    </div>
    <% end %>
