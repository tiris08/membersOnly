<div class="row">
  <div class="leftcolumn">
    <% sorted_posts = @posts.order(:created_at).reverse %>
    <% sorted_posts.each do |post| %>
      <div class="card">
        <h2><%= post.title %> </h2><br>
        <% if user_signed_in? %>
          <h5><%= "written by #{post.user.name} ##{post.user.username} on #{post.created_at.strftime("%b %d, %Y")}" %></h5>
        <% else %>
          <h5><%= "written on #{post.created_at.strftime("%b %d, %Y")}"%> 
          <%=link_to "Log In", new_user_session_path, class: "btn-log" %> to see the author details</h5>
        <% end %>
        <p><%= truncate("#{post.body}", length: 500) %>
        </p>
        <%= link_to "Read more", post_path(post), class: "btn-control" %>
      </div>
    <% end %>
  </div>
  <div class="rightcolumn">
    <div class="card">
      <h3>Popular Posts</h3>
        <div class="fakeimg"><p>Image</p></div>
        <div class="fakeimg"><p>Image</p></div>
        <div class="fakeimg"><p>Image</p></div>
    </div>
  </div>
</div>
