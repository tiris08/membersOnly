
  <h5><%= comment.user.name %> </h5>
  <p><%= comment.content %> </p>
  <p class="time"><%= comment.created_at.strftime("%b %d, %Y") %></p>
  <% if current_user.id == comment.user_id %>
    <%= link_to 'DELETE', [comment.post, comment], method: :delete, 
                                                   data: { confirm: "Are you sure?" },
                                                   class: "btn-dl"%>
  <% end %>
